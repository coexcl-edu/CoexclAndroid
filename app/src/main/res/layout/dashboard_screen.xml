<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/white"
    >

    <RelativeLayout
        style="@style/MatchLayout"
        android:layout_weight="6"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:scaleType="fitXY"
            android:src="@drawable/five"
            android:visibility="visible" />

        <RelativeLayout
            style="@style/MatchLayout"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:paddingLeft="30dp">

                <TextView
                    android:id="@+id/name"
                    style="@style/header_action_bar"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:text="Arya Singh"
                    android:textColor="@color/header1"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/school"
                    style="@style/item_header"
                    android:layout_below="@+id/name"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:text="Coexcl"
                    android:textColor="@color/header2"
                    android:textSize="14sp" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/top_cornor_blue"
            android:orientation="horizontal"
            android:padding="30dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/moving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Having more doubt?"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/moving2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/moving"
                        android:maxLines="1"
                        android:text="Book a video session"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/arrrow"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/book_live_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/gray_cornor_4r"
                android:gravity="center"
                android:padding="15dp"
                android:text="Book Live Session"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:src="@drawable/avatar2"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/top_cornor_radius"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-30dp"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/notes"
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    android:id="@+id/make_notes"
                    style="@style/MatchLayout"
                    android:layout_height="62dp"
                    android:clickable="false"
                    android:src="@drawable/ic_make_notes" />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Make Notes"/>

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:background="@color/divider_color"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/fun_fact"
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fun_fact_image"
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:clickable="false"
                    android:src="@drawable/ic_fun_facts"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Fun Facts"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider_color"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/school_activity"
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="65dp"
                    android:clickable="false"
                    android:src="@drawable/ic_school_activity"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="School Activity"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/divider_color"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/start_quiz"
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:clickable="false"
                    android:src="@drawable/ic_quiz"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Daily Quiz"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider_color"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/live_class"
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:clickable="false"
                    android:src="@drawable/live_class"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Live Classes"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/divider_color"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ask_doubt"
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    android:id="@+id/chat_image"
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:clickable="false"
                    android:src="@drawable/ic_chat"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Ask Doubts"/>
            </LinearLayout>


        </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="56dp"/>

    </LinearLayout>

</LinearLayout>