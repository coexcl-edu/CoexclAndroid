<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/app_background_gradient"
    >

    <RelativeLayout
        style="@style/MatchLayout"
        android:layout_weight="6"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:alpha="0.1"
            android:visibility="visible"
            android:src="@drawable/one"/>

        <RelativeLayout
            style="@style/MatchLayout"
            android:padding="20dp"
            android:gravity="center"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/welcome"
                    style="@style/item_header"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/architects_daughter"
                    android:text="Welcome"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name"
                    style="@style/header_action_bar"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/welcome"
                    android:text="Ravi Singh"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/school"
                    style="@style/item_header"
                    android:layout_below="@+id/name"
                    android:text="Dav public school "
                    android:textColor="@color/white"
                    android:background="@drawable/curve_shape"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:src="@drawable/kid_place_holder"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/top_cornor_radius"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-30dp"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_make_notes"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Make Notes"/>

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:background="@color/divider_color"
                android:layout_height="match_parent"/>

            <LinearLayout
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_fun_facts"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Fun Facts"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider_color"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_school_activity"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="School Activity"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/divider_color"
                android:layout_height="match_parent"/>

            <LinearLayout
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_chat"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Ask Doubts"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider_color"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:src="@drawable/live_class"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Live Classes"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/divider_color"
                android:layout_height="match_parent"/>

            <LinearLayout
                style="@style/MatchLayout"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    style="@style/MatchLayout"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_quiz"
                    />

                <TextView
                    style="@style/sub_header_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="Daily Quiz"/>

            </LinearLayout>

        </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="56dp"/>

    </LinearLayout>

</LinearLayout>