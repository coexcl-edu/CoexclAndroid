<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80000000" >

   <RelativeLayout
       android:id="@+id/QualityRelativeLayout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="80dp" >

       <RadioGroup
           android:id="@+id/QualityGroup"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/textView1"
           android:layout_below="@+id/textView1" >

           <RadioButton
               android:id="@+id/Quality240"
               android:layout_width="270dp"
               android:layout_height="50dp"
               android:background="#ffffff"
               android:gravity="center"
               android:checked="true"
               android:text="320 kbps"
               android:textSize="18sp" />

           <RelativeLayout
               android:layout_width="270dp"
               android:layout_height="0.5dip"
               android:background="#DADADA" >
           </RelativeLayout>

           <RadioButton
               android:id="@+id/Quality320"
               android:layout_width="270dp"
               android:layout_height="50dp"
               android:background="#ffffff"
               android:gravity="center"
               android:text="480 kbps"
               android:textSize="18sp" />

           <RelativeLayout
               android:layout_width="270dp"
               android:layout_height="0.5dip"
               android:background="#DADADA" >
           </RelativeLayout>

           <RadioButton
               android:id="@+id/Quality480"
               android:layout_width="270dp"
               android:layout_height="50dp"
               android:background="#ffffff"
               android:gravity="center"
               android:text="720 kbps"
               android:textSize="18sp" />

           <RelativeLayout
               android:layout_width="270dp"
               android:layout_height="0.5dip"
               android:background="#DADADA" >
           </RelativeLayout>
       </RadioGroup>

       <RelativeLayout
           android:id="@+id/relativeLayout1"
           android:layout_width="270dp"
           android:layout_height="2dp"
           android:layout_alignLeft="@+id/textView1"
           android:layout_below="@+id/textView1"
           android:background="#00B8E6" >
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="270dp"
           android:layout_height="0.5dip"
           android:layout_above="@+id/Quality_done"
           android:layout_alignLeft="@+id/textView1"
           android:background="#00B8E6" >
       </RelativeLayout>

       <Button
           android:id="@+id/Quality_done"
           android:layout_width="270dp"
           android:layout_height="50dp"
           android:layout_alignLeft="@+id/QualityGroup"
           android:layout_below="@+id/QualityGroup"
           android:gravity="center"
           android:text="Done"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/textView1"
           android:layout_width="270dp"
           android:layout_height="60dp"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:background="#ffffff"
           android:gravity="center"
           android:text="Choose Quality"
           android:textColor="#00B8E6"
           android:textSize="22sp" />
   </RelativeLayout>

</RelativeLayout>