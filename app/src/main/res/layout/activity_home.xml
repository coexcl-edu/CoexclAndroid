<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/app_background_gradient"
    >

<RelativeLayout
    style="@style/MatchLayout"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/back"
        style="@style/WrapLayout"
        android:padding="20dp"
        android:src="@drawable/ic_chevron_left_grey700"/>

    <ImageView
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:alpha="0.1"
        android:visibility="gone"
        android:src="@drawable/one"/>

    <RelativeLayout
        style="@style/MatchLayout"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name"
                style="@style/header_action_bar"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Daily Quiz"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


    <LinearLayout
        style="@style/MatchLayout"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_margin="20dp"
            android:src="@drawable/logo_quiz"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/notice_body"
                style="@style/sub_header_15"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="@string/quiz_benefit"/>

            <TextView
                android:id="@+id/home_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_corner_white"
                android:text="@string/filter"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="15dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/home_start"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/round_corner_white"
                android:gravity="center"
                android:text="@string/take_quiz"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@style/wrap_layout"
            android:layout_gravity="center"
            android:visibility="gone"/>


    </LinearLayout>

</LinearLayout>