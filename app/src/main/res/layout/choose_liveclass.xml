<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/app_background_gradient"
    >

    <RelativeLayout
        style="@style/MatchLayout"
        android:layout_weight="8"
        >

        <ImageView
            android:id="@+id/back"
            style="@style/WrapLayout"
            android:padding="20dp"
            android:src="@drawable/ic_chevron_left_grey700"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:alpha="0.1"
            android:visibility="visible"
            android:src="@drawable/one"/>

        <RelativeLayout
            style="@style/MatchLayout"
            android:gravity="center"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name"
                    style="@style/header_action_bar"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="Choose Subject"
                    android:textColor="@color/white"
                    android:textSize="24sp" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/top_cornor_radius"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-30dp"
        android:weightSum="9">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/class_60"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/class_60_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_subject_biology"/>

                    <TextView
                        android:id="@+id/liveclas60"
                        style="@style/sub_header_eleven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Maths - 60 mins"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/divider_color"/>

                <LinearLayout
                    android:id="@+id/class_45"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/class_45_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_subject_biology"/>

                    <TextView
                        android:id="@+id/liveclas45"
                        style="@style/sub_header_eleven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Maths - 45 mins"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/divider_color"/>

                <LinearLayout
                    android:id="@+id/class_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/class_30_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_subject_biology"/>

                    <TextView
                        android:id="@+id/liveclas30"
                        style="@style/sub_header_eleven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Maths - 30 mins"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/divider_color"/>

                <LinearLayout
                    android:id="@+id/class_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/class_15_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_subject_biology"/>

                    <TextView
                        android:id="@+id/liveclas15"
                        style="@style/sub_header_eleven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Maths - 30 mins"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"/>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="86dp"/>

    </LinearLayout>

</LinearLayout>