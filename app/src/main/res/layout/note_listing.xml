<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background_gradient"
    >

    <ImageView
        android:id="@+id/back"
        style="@style/WrapLayout"
        android:padding="20dp"
        android:src="@drawable/ic_chevron_left_grey700"/>

    <LinearLayout
        style="@style/MatchLayout"
        android:orientation="vertical"
        android:weightSum="10">

    <RelativeLayout
        style="@style/MatchLayout"
        android:layout_weight="8"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:alpha="0.1"
            android:visibility="visible"
            android:src="@drawable/one"/>

        <RelativeLayout
            style="@style/MatchLayout"
            android:padding="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name"
                    style="@style/header_action_bar"
                    android:layout_width="match_parent"
                    android:text="Make notes"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        style="@style/MatchLayout"
        android:layout_weight="2"
        android:background="@drawable/top_cornor_radius"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-30dp"
        android:weightSum="9">


        <ListView
            android:id="@+id/notes_listing"
            android:layout_marginTop="30dp"
            android:clickable="true"
            style="@style/MatchLayout"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

    </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editnotes"
        style="@style/WrapLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:tint="@color/white"
        android:backgroundTint="@color/red"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_margin="30dp"/>

    <include android:id="@+id/progress_bar" layout="@layout/progress_bar_layout"/>

    <LinearLayout
        android:id="@+id/notes_error"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_data_found"/>

    </LinearLayout>


</RelativeLayout>