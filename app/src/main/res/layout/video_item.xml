<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/MatchLayout"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/image_on_challenge"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:paddingBottom="9dp"
        android:scaleType="fitXY"
        android:src="@drawable/video_thumbnail_1"
        />


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/image_on_challenge"
        android:layout_marginLeft="105dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp">


        <TextView
            android:id="@+id/Name_of_challenge"
            style="@style/header_action_bar"
            android:layout_marginRight="105dp"
            android:text="Thermodynamic"
            android:gravity="left"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
             />

        <TextView
            android:id="@+id/Name_of_posted"
            style="@style/ApptDay2"
            android:layout_below="@+id/Name_of_challenge"
            android:text="By Michael"
            android:textSize="13sp"
             />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp" >
        <TextView
            android:id="@+id/numberOtimesTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3879cc"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:id="@+id/duration"
            style="@style/header_action_bar"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="30 mins"
            android:visibility="gone"
            />
    </RelativeLayout>

        <ImageView
            android:id="@+id/more_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_more_grey" />

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="3dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
    </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>