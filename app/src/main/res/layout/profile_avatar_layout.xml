<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            style="@style/WrapLayout"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/ic_close_grey16"/>

        <TextView
            style="@style/header_action_bar"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Choose your favourite"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar1"
            style="@style/MatchLayout"
            android:src="@drawable/avatar1"
            android:layout_weight="1"
            android:layout_margin="20dp"
            />
        <ImageView
            android:id="@+id/avatar2"
            style="@style/MatchLayout"
            android:src="@drawable/avatar2"
            android:layout_weight="1"
            android:layout_margin="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar3"
            style="@style/MatchLayout"
            android:src="@drawable/avatar3"
            android:layout_weight="1"
            android:layout_margin="20dp"
            />
        <ImageView
            android:id="@+id/avatar4"
            style="@style/MatchLayout"
            android:src="@drawable/avatar4"
            android:layout_weight="1"
            android:layout_margin="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar5"
            style="@style/MatchLayout"
            android:src="@drawable/avatar5"
            android:layout_weight="1"
            android:layout_margin="20dp"
            />
        <ImageView
            android:id="@+id/avatar6"
            style="@style/MatchLayout"
            android:src="@drawable/avatar6"
            android:layout_weight="1"
            android:layout_margin="20dp"
            />

    </LinearLayout>


</LinearLayout>