<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_info_acitivity"
    style="@style/match_parent_layout"
    android:orientation="vertical"
    android:background="@drawable/home_background_gradient"
    tools:context="com.home.coexcleducation.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:maxHeight="250dp"
        android:scaleType="fitXY"
        android:alpha="0.1"
        android:src="@drawable/lab_image"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circular_buttom_red_gradient"/>
                <TextView
                    style="@style/text_view_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circular_buttom_red_gradient"/>
                <TextView
                    style="@style/text_view_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circular_buttom_red_gradient"/>
                <TextView
                    style="@style/text_view_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circular_buttom_red_gradient"/>
                <TextView
                    style="@style/text_view_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circular_buttom_red_gradient"/>
                <TextView
                    style="@style/text_view_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circular_buttom_red_gradient"/>
                <TextView
                    style="@style/text_view_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"/>

            </LinearLayout>


        </LinearLayout>








    </LinearLayout>



    <LinearLayout
        style="@style/WrapHeightLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/welocomenpte"
            style="@style/sub_header_one"
            android:layout_height="wrap_content"
            android:text="@string/what_you_would_like_to_do_it_today"
            android:textColor="#800080"
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/architects_daughter"
            android:textStyle="bold" />

        <LinearLayout
            style="@style/MatchLayout"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/card_layout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary">

                <TextView
                    style="@style/length_counter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_background_gradient"
                    android:gravity="center"
                    android:text="Ask a doubt" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_layout"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="#e88017"
                android:outlineSpotShadowColor="#e88017">

                <TextView
                    style="@style/length_counter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_gradient"
                    android:gravity="center"
                    android:text="Learn &amp; fun" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            style="@style/MatchLayout"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/card_layout"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="#ffa500">

                <TextView
                    style="@style/length_counter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pink_gradient"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Explore the Universe" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_layout"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="#00ff00">

                <TextView
                    style="@style/length_counter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_gradient"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Check latest updates"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            style="@style/MatchLayout"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/card_layout"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="#ffa64d">

                <TextView
                    style="@style/length_counter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/chocolate_gradient"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="School activity" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_layout"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="#ff80b3">

                <TextView
                    style="@style/length_counter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yellow_gradient"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Coming soon.." />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>